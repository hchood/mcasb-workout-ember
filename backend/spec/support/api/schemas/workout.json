{
  "$schema": "http://json-schema.org/draft-03/schema",
  "title": "Workout",
  "id": "http://jsonschema.net",
  "type": "object",
  "required": ["workout"],
  "properties": {
    "workout": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "exercise_ids": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "exercise_ids"
      ]
    },
    "exercises": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "description"
        ]
      }
    }
  }
}
